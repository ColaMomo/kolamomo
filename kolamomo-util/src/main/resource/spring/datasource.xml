<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<bean id="baseDataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource" lazy-init="true">
		<property name="driverClass">
			<value>com.mysql.jdbc.Driver</value>
		</property>
		<property name="user" value="root" />
		<property name="password" value="123456" />
		<property name="minPoolSize">
			<value>30</value>
		</property>
		<property name="maxPoolSize">
			<value>80</value>
		</property>
		<property name="idleConnectionTestPeriod">
			<value>25</value>
		</property>
		<property name="maxIdleTime">
			<value>28</value>
		</property>
		<property name="breakAfterAcquireFailure">
			<value>false</value>
		</property>
		<property name="checkoutTimeout">
			<value>3000</value>
		</property>
		<property name="acquireRetryAttempts">
			<value>30</value>
		</property>
		<property name="acquireRetryDelay">
			<value>1000</value>
		</property>
	</bean>
	
	<bean id="kolamomoDataSouce" parent="baseDataSource" lazy-init="true">
		<property name="jdbcUrl"
			value="jdbc:mysql://127.0.0.1:3306/kolamomo" />
	</bean>
	    
     <bean id="userDao" class="com.kolamomo.common.dao.UserDao" lazy-init="true">
		<property name="dataSource" ref="kolamomoDataSouce" />
	</bean>
</beans>